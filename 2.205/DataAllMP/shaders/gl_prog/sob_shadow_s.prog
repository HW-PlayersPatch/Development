//debugReload 5

// Construct and build the program
add		vert_text		#version 330
add		frag_text		#version 330

#import sob_share_shadows.imp

add		vert_text		#define SOB_SCISSOR
add		vert_script		sob_shadow.vert
add		frag_script		sob_shadow_s.frag
compile

// Vertex Buffer input mappings
input	pos uv0

// Local
local	tex			inTexScissor		2

// Globals
#if gte CFG_Shadow_Quality 1
global	shadowTrans		inShadowTrans
#fi

// Matrix stack uniform mappings
matrix	modelview	inMatM

#if gte CFG_Shadow_Quality 1
matrix	keylight	inMatKL
#fi

#if gte CFG_Shadow_Quality 3
matrix	altlight	inMatFL
#fi
