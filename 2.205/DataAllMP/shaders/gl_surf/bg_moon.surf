	alias	BG_SurfDiff			inSurfDiff
	alias	BG_SurfGlow			inSurfGlow
	alias	BG_SurfSpec			inSurfSpec
	alias	BG_SurfGloss		inSurfGloss
	alias	BG_SurfRefl			inSurfRefl
	alias	BG_SurfFren			inSurfFren
